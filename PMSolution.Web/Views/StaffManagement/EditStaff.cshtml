@model PMSolution.Web.ViewModels.AddEditStaffViewModel

@{
    ViewBag.Title = "EditStaff";
}

@using (Html.BeginForm("EditStaff", "StaffManagement", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group col-md-4">
        <div style="padding-top: 40px;">
            <h4>Edit patient details</h4>
        </div>
    </div>

    <hr />
    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.Type, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EnumDropDownListFor(model => model.Type, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.Gender, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EnumDropDownListFor(model => model.Gender, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.FirstName, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.LastName, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.CNIC, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.CNIC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CNIC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control datepicker", 
                @Value = Model.DateOfBirth.Date.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2" style="text-align:end">
                @Html.LabelFor(model => model.Address, new { htmlAttributes = new { @class = "col-form-label" } })
            </div>
            <div class="col-sm-6">
                @Html.TextAreaFor(model => model.Address, 05, 50, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-6 position-relative">
                <div class="row">
                    <div class="col-sm-3">
                        @Html.ActionLink("Cancel", "Index", new object { },
                        new { @class = "btn btn-outline-primary btn-block" })

                    </div>
                    <div class="col-sm-3">
                        <input type="submit" class="btn btn-primary btn-block" value="Update" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}