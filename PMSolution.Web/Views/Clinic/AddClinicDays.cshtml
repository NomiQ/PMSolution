@model PMSolution.Web.ViewModels.ClinicDayViewModel

@{
    ViewBag.Title = "AddClinicDays";
}





@using (Html.BeginForm("AddClinicDays", "Clinic", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style="padding-top: 40px;">
        <h4>Add clinic days</h4>
    </div>

    <hr />
    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClinicId)

        <div class="table-responsive border">
            <table class="table w-auto">
                <thead>
                    <tr>
                        <th>Day</th>
                        <th>Open</th>
                        <th>Close</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">
                            <div class="form-group" style="width:10rem;">
                                <div>
                                    @Html.DropDownListFor(model => model.Day, Model.Days, "Select day", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.StartTimeHour, Model.Hours, "Hour", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.StartTimeHour, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.StartTimeMin, Model.Minutes, "Min", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.StartTimeMin, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.StartAMPM, Model.AMPM, "AM/PM", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.StartAMPM, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.EndTimeHour, Model.Hours, "Hour", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.EndTimeHour, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.EndTimeMin, Model.Minutes, "Min", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.EndTimeMin, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group" style="padding-right:3px;">
                                    @Html.DropDownListFor(model => model.EndAMPM, Model.AMPM, "AM/PM", new { @class = "form-control", @style = "width:auto;" })
                                    @Html.ValidationMessageFor(model => model.EndAMPM, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="form-group row justify-content-end" style="padding-right:20px;padding-top:20px;">
            <div style="padding-right:20px;">
                @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-outline-primary btn-block" })
            </div>
            <div>
                <input type="submit" class="btn btn btn-outline-success" value="Save" />
            </div>

        </div>
    </div>

}

