@model PMSolution.Web.ViewModels.AppointmentViewModel

@{
    ViewBag.Title = "Add Appointment";
}

<style>
    dt {
        display: block;
        font-weight:bold;
        font-size:larger;
    }
</style>

<div style="padding-top: 40px;">
    <h4>Add appointment</h4>
</div>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="border-bottom" style="padding-top:20px;"><h5>Patient detail</h5></div>
            <div style="padding-top:20px;">
                <dl>
                    <dt>Name</dt>
                    <dd>@($"{Model.FirstName} {Model.LastName}")</dd>
                    <dt>Date of birth</dt>
                    <dd>@Model.DateOfBirth.ToString("dd-MM-yyyy")</dd>
                    <dt>Phone number</dt>
                    <dd>@Model.PhoneNumber</dd>
                </dl>
            </div>
        </div>
        <div class="col-md-9 border-0">
            <div style="padding-top:20px;">
                @using (Html.BeginForm("AddAppointment", "Appointment", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PatientId)


                    <div class="form-group row justify-content-start">
                        <div class="col-sm-3" style="text-align:end">
                            @Html.LabelFor(model => model.Date, new { @class = "col-form-label" })
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row justify-content-start">
                        <div class="col-sm-3" style="text-align:end">
                            @Html.LabelFor(model => model.StartTimeHour, new { @class = "col-form-label" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.StartTimeHour, Model.Hours, "Hour", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.StartTimeHour, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.StartTimeMin, Model.Minutes, "Min", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.StartTimeMin, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.StartAMPM, Model.AMPM, "AM / PM", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.StartAMPM, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row justify-content-start">
                        <div class="col-sm-3" style="text-align:end">
                            @Html.LabelFor(model => model.EndTimeHour, new { @class = "col-form-label" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.EndTimeHour, Model.Hours, "Hour", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.EndTimeHour, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.EndTimeMin, Model.Minutes, "Min", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.EndTimeMin, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.EndAMPM, Model.AMPM, "AM / PM", new { @class = "form-control", @style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.EndAMPM, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row justify-content-end">
                        <div class="col-sm-2">
                            @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-outline-primary btn-block" })
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" class="btn btn-outline-success" value="Book" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>






